{
  "name": "wicara",
  "version": "0.5.0",
  "description": "The component library powering the Kata.ai platform.",
  "main": "N/A",
  "repository": "https://github.com/kata-ai/wicara.git",
  "author": "Kata.ai <dev@kata.ai>",
  "contributors": [
    {
      "name": "Reyhan Sofian Haqqi",
      "email": "reyhan@kata.ai"
    },
    {
      "name": "Resi Respati",
      "email": "resi@kata.ai"
    }
  ],
  "license": "Apache-2.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream",
    "build-storybook": "build-storybook",
    "clean": "lerna run clean --stream",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "prepare": "yarn build",
    "lerna": "lerna",
    "lint": "tslint -p tsconfig.lint.json",
    "report-coverage": "codecov -f ./coverage/*.json",
    "storybook": "start-storybook -p 6006",
    "test": "node scripts/test.js --env=jsdom",
    "test:coverage": "node scripts/test.js --env=jsdom --coverage",
    "tsc": "tsc -b packages",
    "watch": "tsc-watch -b --preserveWatchOutput packages"
  },
  "dependencies": {
    "highlight.js": "^9.13.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "styled-components": "^4.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@storybook/addon-a11y": "^5.0.11",
    "@storybook/addon-actions": "^5.0.11",
    "@storybook/addon-links": "^5.0.11",
    "@storybook/addon-notes": "^5.0.11",
    "@storybook/addons": "^5.0.11",
    "@storybook/react": "^5.0.11",
    "@storybook/theming": "^5.0.11",
    "@types/chalk": "^2.2.0",
    "@types/debug": "^0.0.31",
    "@types/execa": "^0.9.0",
    "@types/get-stream": "^3.0.1",
    "@types/glob": "^7.1.0",
    "@types/jest": "^23.3.13",
    "@types/listr": "^0.13.0",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.11",
    "@types/storybook__react": "^4.0.1",
    "@types/styled-components": "^4.1.6",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.5",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "debug": "^4.0.1",
    "dependency-graph": "^0.7.2",
    "execa": "^1.0.0",
    "file-loader": "^2.0.0",
    "fork-ts-checker-webpack-plugin": "^0.5.1",
    "get-stream": "^4.0.0",
    "glob": "^7.1.3",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-dom": "^3.0.0",
    "jest-styled-components": "^6.3.1",
    "lerna": "^3.10.7",
    "lint-staged": "^8.1.0",
    "listr": "^0.14.3",
    "moment": "^2.22.2",
    "object-assign": "^4.1.1",
    "prettier": "^1.15.3",
    "promise": "^8.0.2",
    "raf": "^3.4.1",
    "react-docgen-typescript-loader": "^3.1.0",
    "react-testing-library": "^5.3.2",
    "rimraf": "^2.6.2",
    "rollup": "^1.11.3",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.21.0",
    "rollup-plugin-uglify": "^6.0.2",
    "storybook-addon-jsx": "^7.1.2",
    "storybook-addon-react-docgen": "^1.2.2",
    "style-loader": "^0.23.1",
    "ts-jest": "^23.10.5",
    "tsc-watch": "^1.0.31",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.10.0",
    "tslint-config-kata": "^1.1.2",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.3.3333",
    "url-loader": "^1.1.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/*/src/**/*.{ts,tsx}",
      "!packages/*/src/index.{ts,tsx}",
      "!packages/{kata-kit,doc-utils}/**/*.{ts,tsx}"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/config/jest/setupTests.js",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "lib"
    ],
    "moduleNameMapper": {
      "@kata-kit/[^/]$": "<rootDir>packages/$1/src",
      "@wicara/[^/]$": "<rootDir>packages/$1/src"
    },
    "testMatch": [
      "<rootDir>/packages/*/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/packages/*/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/packages/"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.test.json"
      }
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,scss,md,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --edit $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
